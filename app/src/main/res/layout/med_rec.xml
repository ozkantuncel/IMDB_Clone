<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="moviesData"
            type="com.example.imdbclone.data.model.Movies" />

    </data>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imag_back"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:scaleType = "fitXY"
            app:imageResource="@{moviesData.pictures[0]}" />


        <ImageView
            android:id="@+id/image_on"
            android:layout_width="55dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/remove_pic"
            app:tint="@color/yellow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/start_pic" />

                <TextView
                    android:id="@+id/text_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@{moviesData.rating}"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="3dp"
                android:text="@{moviesData.title}"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/text_year"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:text="@{moviesData.relData}"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"/>
            
            <Button
                android:id="@+id/textButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="8sp"
                android:layout_gravity="bottom|center"
                android:textColor="@color/blue"
                android:text="@string/add_button"
                app:icon="@drawable/done_pic"
                app:strokeColor = "@color/black"
                app:strokeWidth = "0.5dp"
                app:iconTint="@color/blue"
                app:iconSize = "10dp"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"/>

        </LinearLayout>

    </RelativeLayout>
</layout>